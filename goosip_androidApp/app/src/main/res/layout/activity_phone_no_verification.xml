<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.PhoneNoVerificationActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:layout_gravity="center"
        android:layout_marginTop="80sp"
        app:lottie_rawRes="@raw/otpvarify"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:text="Verify your phone number"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="50sp"
        android:gravity="center"
        android:text="@string/we_will_send_you_an_one_time_password_on_this_mobile_number"
        android:textSize="14sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_marginVertical="30sp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20sp"
            android:orientation="vertical">

            <EditText
                android:textColor="@color/black"
                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:textColorHint="#746B6B"
                android:layout_marginHorizontal="16sp"
                android:hint="Type Phone number"
                android:inputType="phone"
                android:minHeight="48sp"
                android:padding="10sp" />

            <Button
                android:id="@+id/continuebtn_phoneverify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:textColor="@color/white"
                android:background="@drawable/textbox_outline"
                android:text="Verify"></Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>